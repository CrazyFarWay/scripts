fileviewer *.pdf /.config/vifm/vifmrc
echo   vifmimg pdfpreview %px %py %pw %ph %c >> echo /.config/vifm/vifmrc
        \ %pc /.config/vifm/vifmrc
echo   vifmimg clear >> echo /.config/vifm/vifmrc
 /.config/vifm/vifmrc
echo  fileviewer *.epub >> echo /.config/vifm/vifmrc
        \ vifmimg epubpreview %px %py %pw %ph %c /.config/vifm/vifmrc
echo   %pc >> echo /.config/vifm/vifmrc
        \ vifmimg clear /.config/vifm/vifmrc
echo  >> echo /.config/vifm/vifmrc
    fileviewer *.avi,*.mp4,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.mpeg,*.vob, /.config/vifm/vifmrc
echo  *.fl[icv],*.m2v,*.mov,*.webm,*.ts,*.mts,*.m4v,*.r[am],*.qt,*.divx, >> echo /.config/vifm/vifmrc
        \ vifmimg videopreview %px %py %pw %ph %c /.config/vifm/vifmrc
echo   %pc >> echo /.config/vifm/vifmrc
        \ vifmimg clear /.config/vifm/vifmrc
echo  >> echo /.config/vifm/vifmrc
    fileviewer *.bmp,*.jpg,*.jpeg,*.png,*.xpm /.config/vifm/vifmrc
